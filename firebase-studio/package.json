{
  "name": "firebase-studio",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"cross-env NODE_OPTIONS=--max_old_space_size=4096 next dev\" \"cross-env NODE_OPTIONS=--max_old_space_size=4096 firebase emulators:start --only auth,firestore,storage,functions --import ./.emulator-data\"",
    "emu:only": "firebase emulators:start --only auth,firestore,storage,functions --import ./.emulator-data",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "seed": "ts-node --project tsconfig.json scripts/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@tanstack/react-query": "^5.51.1",
    "firebase": "^10.12.4",
    "firebase-admin": "^12.5.0",
    "jose": "^5.2.4",
    "lucide-react": "^0.378.0",
    "next": "^14.2.10",
    "next-themes": "^0.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "zustand": "^4.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.3",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.10",
    "firebase-tools": "^13.9.1",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}

